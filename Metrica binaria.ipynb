    "#funci√≥n para evaluar metrica binaria\n",
    "def binary_scoring_metrics(conf_matrix):\n",
    "    a = conf_matrix[0,0];\n",
    "    b = conf_matrix[0,1];\n",
    "    c = conf_matrix[1,0];\n",
    "    d = conf_matrix[1,1];\n",
    "    \n",
    "    pearson = (a*d - b*c)/sqrt((a+c)*(b+d)*(a+b)*(c+d));\n",
    "    return pearson"
   ]
  }
